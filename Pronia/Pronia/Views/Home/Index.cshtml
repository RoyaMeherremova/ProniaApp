          <div class="row">
            <div class="section-title-wrap without-tab">
              <h2 class="section-title">@Model.HeaderBackgrounds["NewProductHeader"]</h2>
              <p class="section-desc">
                    @Model.HeaderBackgrounds["NewProductHeaderDescription"]
              </p>
            </div>
            <div class="col-lg-12">
