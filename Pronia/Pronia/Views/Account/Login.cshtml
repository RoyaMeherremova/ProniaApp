@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post" asp-action="Login">
                    <div class="login-form" style="position:relative;left:300px">
                        <h4 class="login-title">Login</h4>

                        <div class="row">
                            <div class="col-lg-12">
                                <label>Email Address*</label>
                                <input type="email" asp-for="EmailOrUsername" placeholder="Email Address" />
                                <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                            </div>

                            <div class="col-lg-12">
                                <label>Password</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="col-md-8">
                                <div class="check-box">
                                    <input type="checkbox" id="remember_me" asp-for="IsRememberMe"/>
                                    <label for="remember_me">Remember me</label>
                                </div>
                            </div>

                            <div class="col-md-4 pt-1 mt-md-0">
                                <div class="forgotton-password_info">
                                    <a asp-controller="Account" asp-action="ForgotPassword"> Forgotten pasward?</a>
                                </div>
                            </div>

                            <div class="col-lg-12 pt-5">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Login
                                </button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}