@model BlogDetailVM
@inject UserManager<AppUser> userManager; 
@{
    ViewData["Title"] = "BlogDetail";
    int sumCategoryProducts = 0;
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="/assets/images/breadcrumb/bg/@Model.HeaderBackgrounds["BackgroundPhoto"]">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Blog</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Blog Detail</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-4 order-2 pt-5 pt-lg-0">
                    <div class="sidebar-area">
                        <div class="widgets-searchbox">
                            <form id="widgets-searchbox">
                                <input class="input-field"
                                       type="text"
                                       placeholder="Search" />
                                <button class="widgets-searchbox-btn" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </form>
                        </div>
                        <div class="widgets-area">
                            <div class="widgets-item pt-0">
                                <h2 class="widgets-title mb-4">Categories</h2>
                                <ul class="widgets-category">
                                    <li>
                                        <a href="#" class="allproducts">
                                            <i class="fa fa-chevron-right"></i>
                                            @foreach (var category in Model.Categories)
                                            {
                                                sumCategoryProducts += (int)category.ProductCategories?.Count();
                                            }
                                            All <span>(@sumCategoryProducts)</span>
                                        </a>
                                    </li>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li>
                                            <a href="#" data-id="@category.Id" class="category">
                                                <i class="fa fa-chevron-right"></i>
                                                @category.Name <span>(@category.ProductCategories?.Count())</span>
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                            <div class="widgets-item">
                                <h2 class="widgets-title mb-4">Recent Post</h2>
                                <div class="swiper-container widgets-list-slider">
                                    <div class="swiper-wrapper">
                                        @foreach (var blog in Model.Blogs)
                                        {
                                            <div class="swiper-slide">
                                                <div class="widgets-list-item">
                                                    <div class="widgets-list-img">
                                                      
                                                            <a href="#">
                                                                <img class="img-full"
                                                             src="~/assets/images/website-images/@blog.Images.FirstOrDefault(m => m.IsMain).Image"
                                                             alt="Blog Images" />
                                                            </a>
                                                        
                                                    </div>
                                                    <div class="widgets-list-content">
                                                        <div class="widgets-meta">
                                                            <ul>
                                                                <li class="date">@blog.CreadtedDate.ToString("dd MMMMM yyyy")</li>
                                                            </ul>
                                                        </div>
                                                        <h2 class="title mb-0">
                                                            <a href="#">@blog.Description.Substring(0,15).</a>
                                                        </h2>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="widgets-item">
                                <h2 class="widgets-title mb-4">Populer Tags</h2>
                                <ul class="widgets-tag">
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <li>
                                            <a href="#" data-id="@tag.Id" class="tag">@tag.Name</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                        <div class="banner-item widgets-banner img-hover-effect">
                            <div class="banner-img">
                                <img src="~/assets/images/website-images/@Model.NewProducts.FirstOrDefault().Images.FirstOrDefault(m=>m.IsMain).Image"
                                     alt="Banner Image" />
                            </div>
                            <div class="banner-content text-position-center">
                                <span class="collection">New Collection</span>
                                <h3 class="title">Plant Port</h3>
                                <div class="button-wrap">
                                    <a class="btn btn-custom-size sm-size btn-pronia-primary"
                                       href="shop.html">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8 order-1">
                    <div class="blog-detail-item">
                        <div class="blog-content">
                            <div class="blog-meta">
                                <ul>
                                    <li class="author">
                                        <a href="#">By: @Model.BlogDt.Author.Name</a>
                                    </li>
                                    <li class="date">@Model.BlogDt.CreadtedDate.ToString("dd MMMMM yyyy")1</li>
                                </ul>
                            </div>
                            <h2 class="title">@Model.BlogDt.Tittle</h2>
                            <p class="short-desc">
                           @Model.BlogDt.Description
                            </p>
                        </div>
                        <div class="blog-img img-hover-effect">
                            <img class="img-full"
                                 src="~/assets/images/website-images/@Model.BlogDt.Images.FirstOrDefault(m=>m.IsMain).Image"
                                 alt="Blog Image" />
                        </div>
                        <p class="short-desc">
                            @Model.BlogDt.Description.Substring(0,350)
                        </p>
                        <blockquote>
                            <p class="mb-0">
                                @Model.BlogDt.Description.Substring(0,100)
                            </p>
                        </blockquote>
                        <p class="short-desc">
                            @Model.BlogDt.Description
                        </p>
                        <div class="blog-banner row">
                           
                                <div class="single-img img-hover-effect col-sm-6">
                                    <img class="img-full"
                                     src="~/assets/images/website-images/@Model.BlogDt.Images.FirstOrDefault(m=>m.IsMain).Image"
                                     alt="Blog Banner" />
                                </div>
                            <div class="single-img img-hover-effect col-sm-6">
                                <img class="img-full"
                                     src="~/assets/images/website-images/@Model.BlogDt.Images.FirstOrDefault(m=>!m.IsMain)?.Image"
                                     alt="Blog Banner" />
                            </div>
                           
                        </div>
                        <p class="short-desc mb-0">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                            sed do eiusmod tempor incididunt ut labore etl dolore magna
                            aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                            ullamco laboris nisi ut aliquiex ea commodo consequat. Duis
                            aute irure dolor in reprehenderit in voluptate velit esse
                            cillum dolore eukip fugiat nulla pariatur. Excepteur sint
                            occaecat
                        </p>
                    </div>
                    <div class="social-with-tags">
                        <div class="tags">
                            <span class="title">Tags: </span>
                            <ul>
                            
                            </ul>
                        </div>
                        <div class="social-link">
                            <ul>
                                <li>
                                    <a href="#"
                                       data-tippy="Facebook"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"
                                       data-tippy="Dribbble"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="fa fa-dribbble"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"
                                       data-tippy="Pinterest"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="fa fa-pinterest-p"></i>
                                    </a>
                                </li>
                                <li class="comment">
                                    <a href="#">
                                        <span>2</span>
                                        <i class="fa fa-comments"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-review-body">
                        <div class="blog-comment mt-0">
                            <h4 class="heading">Comments (@Model.BlogComments?.Count())</h4>

                            @foreach (var blogComment in Model.BlogComments)
                            {
                                <div class="blog-comment-item">

                                    <div class="blog-comment-content">
                                        <div class="user-meta">
                                            <h2 class="user-name">@(blogComment.AppUser.FirstName + " " + blogComment.AppUser.LastName)</h2>
                                            <span class="date">@blogComment.CreadtedDate.ToString("dd MMMM yyyy")</span>
                                        </div>
                                        <p class="user-comment">
                                            @blogComment.Message
                                        </p>
                                        <a class="btn btn-custom-size comment-btn" href="#">Reply</a>
                                    </div>
                                </div>
                            }


                        </div>
                        <div class="feedback-area">
                            <h2 class="heading">Leave a comment</h2>
                            @if (User.Identity.IsAuthenticated)
                            {
                                AppUser user = userManager.Users.FirstOrDefault(u => u.UserName == User.Identity.Name);

                                <form class="feedback-form" asp-controller="Blog" asp-action="PostComment" asp-route-userId="@user.Id" asp-route-blogId="@Model.BlogDt.Id" method="post">

                                    <div class="group-input">
                                        <div class="form-field me-md-30 mb-30 mb-md-0">
                                            <input value="@(user.FirstName + " " + user.LastName)"
                                               readonly
                                               class="input-field" asp-for="CommentVM.FullName" />
                                        </div>
                                        <div class="form-field">
                                            <input readonly
                                               value="@user.Email
                                               class="input-field" asp-for="CommentVM.Email" />
                                        </div>
                                    </div>

                                    <div class="form-field mt-30">
                                        <input placeholder="Subject (Optinal)"
                                           class="input-field" asp-for="CommentVM.Subject" />
                                    </div>
                                    <div class="form-field mt-30">
                                        <textarea placeholder="Message"
                                              class="textarea-field" asp-for="CommentVM.Message"></textarea>
                                    </div>
                                    <div class="button-wrap pt-5">
                                        <button type="submit"
                                            value="submit"
                                            class="btn btn-custom-size xl-size btn-pronia-primary"
                                            name="submit">
                                            Post Comment
                                        </button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form class="feedback-form" asp-controller="Blog" asp-action="PostComment" method="post">
                                    <div class="group-input">
                                        <div class="form-field me-md-30 mb-30 mb-md-0">
                                            <input type="text"
                                               name="name"
                                               placeholder="Your Name*"
                                               class="input-field" />
                                        </div>
                                        <div class="form-field">
                                            <input type="text"
                                               name="email"
                                               placeholder="Your Email*"
                                               class="input-field" />
                                        </div>
                                    </div>
                                    <div class="form-field mt-30">
                                        <input type="text"
                                           name="subject"
                                           placeholder="Subject (Optinal)"
                                           class="input-field" />
                                    </div>
                                    <div class="form-field mt-30">
                                        <textarea name="message"
                                              placeholder="Message"
                                              class="textarea-field"></textarea>
                                    </div>
                                    <div class="button-wrap pt-5">
                                        <button type="submit"
                                            value="submit"
                                            class="btn btn-custom-size xl-size btn-pronia-primary"
                                            name="submit">
                                            Post Comment
                                        </button>
                                    </div>
                                </form>
                            }

                        </div>
                    </div>
                    <div class="feedback-area">
                        <h2 class="heading">Leave a comment</h2>
                        <form class="feedback-form" action="#">
                            <div class="group-input">
                                <div class="form-field me-md-30 mb-30 mb-md-0">
                                    <input type="text"
                                           name="name"
                                           placeholder="Your Name*"
                                           class="input-field" />
                                </div>
                                <div class="form-field">
                                    <input type="text"
                                           name="email"
                                           placeholder="Your Email*"
                                           class="input-field" />
                                </div>
                            </div>
                            <div class="form-field mt-30">
                                <input type="text"
                                       name="subject"
                                       placeholder="Subject (Optinal)"
                                       class="input-field" />
                            </div>
                            <div class="form-field mt-30">
                                <textarea name="message"
                                          placeholder="Message"
                                          class="textarea-field"></textarea>
                            </div>
                            <div class="button-wrap pt-5">
                                <button type="submit"
                                        value="submit"
                                        class="btn btn-custom-size xl-size btn-pronia-primary"
                                        name="submit">
                                    Post Comment
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
