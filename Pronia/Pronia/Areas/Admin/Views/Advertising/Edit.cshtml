@model AdvertisingUpdateVM
@{
    ViewData["Title"] = "Edit";
}
<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="slider-content" style="width:200px;height:250px;">
            <img style="width:100%;height:100%;" src="~/assets/images/website-images//@Model.Image" />
        </div>
        <label for="formFile" class="form-label my-2">Choose Photo</label>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Tittle</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="category-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


<partial name="_ValidationScriptsPartial" />
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("category-text")
</script>