@model List<HeaderBackground>
@{
    ViewData["Title"] = "HeaderBackgrounds";
}

<div class="container my-5">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                       Header Backgrounds
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var headerBackground in Model)
                {
                    <tr>

                        <td>
                            <div class="mt-2">
                                <h6>@headerBackground.Key</h6>
                                @headerBackground.Value
                            </div>
                          
                        </td>
                        <td style="display:flex;gap:17px;">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@headerBackground.Id">Edit</a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@headerBackground.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>