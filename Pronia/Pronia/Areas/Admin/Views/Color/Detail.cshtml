@model Color
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h4> Color detail</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td class="py-1">
                   @Model.Name

                </td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>
