@model Client
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1> Client detail</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>

            </tr>
        </thead>

        <tbody>

            <tr>

                <td class="py-1">
                    <img src="~/assets/images/website-images//@Model.Image" style="width:250px;height:200px" />

                </td>

                <td class="py-1">
                   @Model.Name

                </td>

                <td class="py-1">
                    @Html.Raw(Model.Description)

                </td>

            </tr>


        </tbody>
    </table>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>
