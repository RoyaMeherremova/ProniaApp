@model SliderUpdateVM
@{
    ViewData["Title"] = "Edit";
}
<div class="container my-5">
    <div class="slider-content" style="width:200px;height:250px;">
        <img style="width:100%;height:100%;" src="~/assets/images/website-images//@Model.Image" />
    </div>

    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">
      
        <label for="formFile" class="form-label my-2">Choose Photo</label>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Tittle</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="slider-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Offer</label>
            <input class="form-control" id="customFile" asp-for="Offer" />
            <span class="text-danger" asp-validation-for="Offer">@ViewBag.error</span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

 @section Scripts{
<partial name="_ValidationScriptsPartial" />
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("slider-text")
</script>
 }