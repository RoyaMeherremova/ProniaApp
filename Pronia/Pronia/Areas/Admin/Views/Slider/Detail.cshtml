@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1> Banner detail</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Tittle
                </th>
                <th>
                    Description
                </th>
                <th>
                    Offer
                </th>

            </tr>
        </thead>

        <tbody>

            <tr>

                <td class="py-1">
                    <img src="~/assets/images/website-images//@Model.Image" style="width:250px;height:200px" />

                </td>

                <td class="py-1">
                    @Model.Tittle

                </td>

                <td class="py-1">
                    @Html.Raw(Model.Description)

                </td>
                <td class="py-1">
                    @Model.Offer

                </td>
            </tr>


        </tbody>
    </table>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>
