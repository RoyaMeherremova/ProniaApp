@model List<Brand>
@{
    ViewData["Title"] = "Brand";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/assets/images/website-images//@brand.Image" style="width:70px;height:70px" alt="image" />
                        </td>


                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@brand.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@brand.Id">Edit</a>
                            <form style="display:inline-block" asp-action="Delete" asp-route-id="@brand.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>