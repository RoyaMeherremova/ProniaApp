@model BannerCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <label for="formFile" class="form-label my-2">Choose Photo</label>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Tittle</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle">@ViewBag.error</span>
        </div>
           <div class="form-group">
         <label for="formFile" class="form-label my-2">Add Name</label>
            <textarea class="form-control" id="banner-text" asp-for="Name" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

 @section Scripts{
<partial name="_ValidationScriptsPartial" />
<script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("banner-text")
    </script>
 }