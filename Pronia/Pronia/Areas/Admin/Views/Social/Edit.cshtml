@model SocialUpdateVM
@{
    ViewData["Title"] = "Edit";
}
<div class="container my-5">
    <form class="forms-sample" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Link</label>
            <input class="form-control" id="customFile" asp-for="Link" />
            <span class="text-danger" asp-validation-for="Link">@ViewBag.error</span>
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
 }