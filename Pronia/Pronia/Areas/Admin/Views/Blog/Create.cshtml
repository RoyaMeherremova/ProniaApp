@model BlogCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">

    <form class="form-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Choose Photos</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Title</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle"></span>
        </div>

           <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Description</label>
            <textarea class="form-control" id="advert-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>
          <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Author</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>  
        </div>
           <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Author</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>  
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>