@model BlogUpdateVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <div class="images">
        @foreach (var blogImage in Model.Images)
        {
            <img src="~/assets/images/website-images//@blogImage.Image" style="width:150px;height:100px" alt="image" />
        }
    </div>
    <form class="form-sample" method="post" enctype="multipart/form-data">
        <label for="formFile" class="form-label">Choose photos</label>
        <input type="file" class="form-control" id="customFile" asp-for="Photos" />

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add Title</label>
            <input class="form-control" id="customFile" asp-for="Tittle" />
            <span class="text-danger" asp-validation-for="Tittle"></span>
        </div>
        <div class="form-group">
            <label for="formFile" class="form-label my-2"> Add Description</label>
            <input class="form-control" id="customFile" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label my-2">Add Author</label>
            <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>
        </div>



        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>


    </form>

</div>

@section Scripts{
        <script src="~/Admin/ckeditor/ckeditor.js"></script>

}